{
	"compilerOptions": {
		"outDir": "./build/server",
		"rootDir": "./src/server",
		"sourceMap": true,
		"target": "es2015",
		"moduleResolution": "node",
		"module": "commonjs",
		"lib": [
			"es2017"
		],
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"files": [
		"src/server/index.ts"
	],
	"include": [
		"src/server/scripts/*.ts",
		"src/server/discord/commands/*.ts",
		"src/server/discord/events/message-create/*.ts"
	],
    "exclude": ["build", "data", "dist", "node_modules", ".cache"]
}